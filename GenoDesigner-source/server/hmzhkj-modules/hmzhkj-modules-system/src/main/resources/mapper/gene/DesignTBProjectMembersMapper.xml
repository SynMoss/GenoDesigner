<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hmzhkj.gene.mapper.DesignTBProjectMembersMapper">

    <resultMap type="com.hmzhkj.gene.domain.DesignTBProjectMembers" id="DesignTBProjectMembersResult">
        <result property="id"    column="id"    />
        <result property="projectId"    column="project_id"    />
        <result property="staffId"    column="staff_id"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="create_time"    />
        <result property="createStaffNo"    column="create_staff_no"    />
        <result property="updateTime"    column="update_time"    />
        <result property="updateStaffNo"    column="update_staff_no"    />
        <result property="createStaffName"  column="create_staff_name"/>
    </resultMap>

    <sql id="selectDesignTBProjectMembersVo">
        select id, project_id, staff_id, status, create_time,
               create_staff_no, update_time, update_staff_no, create_staff_name from design_t_b_project_members
    </sql>

    <select id="selectDesignTBProjectMembersList" resultMap="DesignTBProjectMembersResult">
        <include refid="selectDesignTBProjectMembersVo"/>
        where status in(0,1)
        <if test="projectId != null  and projectId != ''"> and project_id = #{projectId}</if>
        <if test="staffId != null  and staffId != ''"> and staff_id = #{staffId}</if>
    </select>

    <select id="selectDesignTBProjectMembersStaffIds" resultType="string">
        select staff_id staffId
        from design_t_b_project_members
        where project_id = #{projectId}
          and status in(0,1)
    </select>

    <update id="removeProjectMember">
        update design_t_b_project_members
        set status = 2
        where status in(0,1)
          and project_id = #{projectId}
          and staff_id = #{staffId}
    </update>
</mapper>